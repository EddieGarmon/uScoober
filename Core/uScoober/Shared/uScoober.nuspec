            <frameworkAssembly assemblyName="Microsoft.Spot.Hardware" />
            <frameworkAssembly assemblyName="Microsoft.Spot.Native" />
        </frameworkAssemblies>
        <!-- example:
        <developmentDependency>true</developmentDependency>
        -->
    </metadata>
    <files>
